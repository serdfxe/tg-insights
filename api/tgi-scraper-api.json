{
  "openapi": "3.1.0",
  "info": {
    "title": "Telegram Channel Scraper Service",
    "description": "Hide API",
    "version": "1.0.0"
  },
  "paths": {
    "/scrape": {
      "post": {
        "tags": [
          "channels"
        ],
        "summary": "Scrape Channel",
        "description": "Скрапит статистику канала",
        "operationId": "scrape_channel_scrape_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ScrapeRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ScrapeResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/stats/{channel_id}": {
      "get": {
        "tags": [
          "channels"
        ],
        "summary": "Get Channel Stats",
        "description": "Получает историю статистики канала",
        "operationId": "get_channel_stats_stats__channel_id__get",
        "parameters": [
          {
            "name": "channel_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "title": "Channel Id"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 5,
              "title": "Limit"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {

                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Health check with S3 status",
        "operationId": "health_check_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {

                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "MessageStatsResponse": {
        "properties": {
          "message_id": {
            "type": "integer",
            "title": "Message Id"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "title": "Date"
          },
          "views": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Views"
          },
          "forwards": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Forwards"
          },
          "replies": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Replies"
          },
          "reactions": {
            "additionalProperties": {
              "type": "integer"
            },
            "type": "object",
            "title": "Reactions"
          },
          "text": {
            "type": "string",
            "title": "Text"
          },
          "media_type": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Media Type"
          },
          "has_media": {
            "type": "boolean",
            "title": "Has Media"
          }
        },
        "type": "object",
        "required": [
          "message_id",
          "date",
          "views",
          "forwards",
          "replies",
          "reactions",
          "text",
          "media_type",
          "has_media"
        ],
        "title": "MessageStatsResponse"
      },
      "ScrapeRequest": {
        "properties": {
          "channel_identifier": {
            "type": "string",
            "title": "Channel Identifier"
          },
          "limit_messages": {
            "type": "integer",
            "title": "Limit Messages",
            "default": 100
          }
        },
        "type": "object",
        "required": [
          "channel_identifier"
        ],
        "title": "ScrapeRequest"
      },
      "ScrapeResponse": {
        "properties": {
          "channel_id": {
            "type": "integer",
            "title": "Channel Id"
          },
          "username": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Username"
          },
          "title": {
            "type": "string",
            "title": "Title"
          },
          "description": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Description"
          },
          "subscribers_count": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Subscribers Count"
          },
          "participants_count": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Participants Count"
          },
          "messages": {
            "items": {
              "$ref": "#/components/schemas/MessageStatsResponse"
            },
            "type": "array",
            "title": "Messages"
          }
        },
        "type": "object",
        "required": [
          "channel_id",
          "username",
          "title",
          "description",
          "subscribers_count",
          "participants_count",
          "messages"
        ],
        "title": "ScrapeResponse"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}